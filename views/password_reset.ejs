  <!-- Bootstrap core CSS -->
  <link rel="stylesheet" href="/bower_components/bootstrap/dist/css/bootstrap.css">
  <link rel="stylesheet" href="/bower_components/bootstrap/dist/css/style.css">
  </head>
  <body>

    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
      <div class="container">
        <a class="navbar-brand" href="/">CHAMBRE DE COMMERCE</a>
      </div>
    </nav>
    <div class="container" style="margin-bottom:180px;margin-top:100px;">
    <div class="row">
      <div class="col-sm-3 col-md-3"></div>
        <div class="col-sm-6 col-md-6">
            <input type="hidden" id="userResetToken" value="<%= gettoken %>" >

            <h1 class="text-center login-title">Reset your password/Réinitialisez votre mot de passe</h1>

            <label>New password/Nouveau mot de passe</label>
            <input type="password" id="resetpwrd" class="form-control">
            <label>Re enter new password/Ré-entrez le nouveau mot de passe</label>
            <input type="password" id="re_enter_resetpwrd" class="form-control">
            <span id="resetpwrdErr" class="text-danger" style="float:right"></span><br>
            <button type="button" name="button" class="btn btn-primary" onclick="UserReset()">Submit/
Soumettre</button>

        </div>

    </div>
</div>


    <!-- /.container -->

    <!-- Footer -->
