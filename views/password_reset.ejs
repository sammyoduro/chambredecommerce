      <div class="container">
        <p class="m-0 text-center text-white">Copyright &copy; ccimma.cm 2018</p>
      </div>
      <!-- /.container -->
    </footer>

    <!-- Bootstrap core JavaScript -->
    <script src="/bower_components/jquery/dist/jquery.js"></script>
    <script src="/bower_components/bootstrap/dist/js/bootstrap.js"></script>
    <script src="https://smtpjs.com/v2/smtp.js"></script>
<script type="text/javascript">
  function UserReset(){

    var npwrd= document.getElementById('resetpwrd').value;
    var rnpwrd= document.getElementById('re_enter_resetpwrd').value;
    var token = document.getElementById('userResetToken').value;

    var data = {token: token,npwrd:npwrd};

    if(npwrd.length < 1 || npwrd.length < 1 ){
      document.getElementById('resetpwrdErr').innerHTML = 'All fields are required';
    }
    else if(npwrd.length < 8 || npwrd.length < 8 ){
      document.getElementById('resetpwrdErr').innerHTML = 'password must be atleast 8 characters';
    }else if (npwrd != rnpwrd) {
      document.getElementById('resetpwrdErr').innerHTML = 'password do not match';
    }
    else{
  document.getElementById('resetpwrdErr').innerHTML = '';
  $.ajax({
    type        : 'post',
    data        : data,
    dataType    : 'json',
    url         : '/ccima.cm/staffroom/administrators/code100/recovery',
    success     : function(incoming){
      window.location = '/ccima.cm/staffroom/administrators/code100/?Q='+incoming.status;


    }

  });

  }
}

</script>
  </body>

</html>
