      <%- messages('message',locals) %>
      <h2 style="text-align:center" >Registered Users  </h2>
      <div id="userverified" class="invisible"><% if( typeof verified != 'undefined'){ %><%= verified %><% } %></div>
      <div class="col-lg-12 ">
        <h4 class="page-header">Users List</h4>
        <div class="col-sm-12 col-md-12 col-lg-12" id="userlist">
          <% if( typeof users != 'undefined'){ %>
             <% for(let i = 0 ; i< users.length; i++) { %>
               <div id="hideUser<%= users[i].id %>"></div>
               <div class="col-md-12">
                 <i class="glyphicon glyphicon-user"></i> <%= users[i].title %>&nbsp;<%= users[i].fname %>&nbsp;<%= users[i].lname %>
               </div>
               <div class="rows">
                 <div class="col-md-4">
                   <div class="col-md-12"><small class="text-muted">Username: </small><%= users[i].username %></div>
                   <div class="col-md-12"><small class="text-muted">Admin type:</small><%= users[i].Admintype %></div>
                   <div class="col-md-12"><%= users[i].CompanyName %></div>
                 </div>
                 <div class="col-md-8">
                 <div class="col-md-11">
                   <div class="col-md-12"><i class="glyphicon glyphicon-envelope"></i> <%= users[i].email %></div>
                   <div class="col-md-12 "> <i class="glyphicon glyphicon-phone-alt"></i> <%= users[i].pnumber %></div>
                   <div class="col-md-12 text-muted"><small>@ <%= users[i].creation_date %></small></div>
                 </div>
                 <div class="col-md-1" style="float:right">
                   <% if(user){ %>
                     <% if(user.Admintype =='Super Admin'){ %>
                       <button type="button" class="btn btn-danger btn-sm" id="<%= users[i].id %>" onclick="deleteUser(this.id)"><i class="glyphicon glyphicon-trash"></i></button>
                     <% } %>
                     <% } %>
                 </div>
               </div>

               <div class="col-lg-12">
                <hr>
               </div>
