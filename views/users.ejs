    <script type="text/javascript">
      var userverified =  document.getElementById('userverified').innerHTML;
      if(userverified == 'verified'){
        $("#successreg").modal();
      }

      // delete company
      var deleteUserresponse = '';
      var uid = '';
      var deleteUser = function (delid) {
        var list =<%-JSON.stringify(users)%>
        var user = '';

        for (i = 0; i < list.length; i++){
          if(list[i].id == delid){
            user = list[i].username;
            uid = list[i].id;
          }
        }
        document.getElementById('deluname').innerHTML = user;
        document.getElementById('delunamehd').innerHTML = user;

        $('#delu').attr('href','/ccima.cm/staffroom/home/deleteUser/'+uid);
        $("#deleteUser").modal();

      }
function superAdmin() {
  var list =<%-JSON.stringify(users)%>
  var getemail = document.getElementById('getemail').innerHTML;

  for (i = 0; i < list.length; i++){
    if(list[i].email == getemail){
      $('#hideUser'+list[i].id).attr('style','display:none');
    }
  }
}superAdmin();
